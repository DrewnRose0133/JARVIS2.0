<Window x:Class="JARVIS.Visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="JARVIS Visualizer" Height="600" Width="800">
    <Grid>
        <!-- Avatar Image -->
        <Image Name="JarvisAvatar" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="200" Margin="0,0,0,150" />

        <!-- Status Text -->
        <TextBlock Name="StateText" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="24" Margin="0,0,0,50" />

        <!-- Status Indicator Circle (Listening, Speaking) -->
        <Ellipse Name="StatusCircle" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Height="100" Fill="Gray" Margin="0,0,0,20" />
    </Grid>
</Window>
